---
import "../styles/global.css";

const pageTitle = "My Astro Learning Blog";

const primaryColor = "navy";
const secondaryColor = "teal";
---

<html lang="en">
 <head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{pageTitle}</title>
  <style define:vars={{ primaryColor, secondaryColor }}>
   .post {
    color: var(--primaryColor);
    font-size: 1.2rem;
   }
  </style>
 </head>

 <body>
  <a href="/">Home</a>
  <a href="/about/">About</a>
  <a href="/blog/">Blog</a>

  <h1>{pageTitle}</h1>
  <h2>This is where I will post about my journey learning Astro.</h2>
  <ul>
   <li><a class="post" href="/posts/post-1/">Post 1</a></li>
   <li><a class="post" href="/posts/post-2/">Post 2</a></li>
   <li><a class="post" href="/posts/post-3/">Post 3</a></li>
  </ul>
 </body>
</html>
